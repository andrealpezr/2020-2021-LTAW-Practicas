<?xml version="1.0" encoding="UTF-8"?>

<!-- Defino el lenguaje que quiero (gramática)
    Un lenguaje que solo tiene la marca raiz
    y dentro de ella hay varios productos
    añado el sufijo + -->
<!DOCTYPE tienda [
    <!ELEMENT tienda (producto+)>
    <!ELEMENT producto (#PCDATA)>
]>

<!--Ejemplo de uso del lenguaje-->
<!-- Dentro del elemento tienda solo puede haber
     cadenas de texto. Ninguna etiqueta -->
<tienda>
    <producto>Esto es un producto</producto>
    <producto> Este es otro producto</producto>
</tienda> 